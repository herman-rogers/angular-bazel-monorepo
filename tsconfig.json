{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.iterable",
      "es2015.promise"
    ],
    // Permit decorator syntax
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,

    // Custom Library Paths
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["./packages/*"],
      "@packages/angularLib/*": [
        "./bazel-out/darwin-fastbuild/bin/packages/angularLib/src/*"
      ]
    },
    "rootDirs": [
      ".",

      // Add all possible bazel-out directories
      // See https://github.com/microsoft/TypeScript/issues/37257
      // app1
      "./projects/app1",
      "./bazel-out/darwin-dbg/bin/projects/app1",
      "./bazel-out/darwin-fastbuild/bin/projects/app1",
      "./bazel-out/k8-dbg/bin/projects/app1",
      "./bazel-out/k8-fastbuild/bin/projects/app1",
      "./bazel-out/x64_windows-dbg/bin/projects/app1",
      "./bazel-out/x64_windows-fastbuild/bin/projects/app1",

      // app2
      "./projects/app2",
      "./bazel-out/host/bin/projects/app2",
      "./bazel-out/darwin-fastbuild/bin/projects/app2",
      "./bazel-out/k8-fastbuild/bin/projects/app2",
      "./bazel-out/x64_windows-fastbuild/bin/projects/app2",
      "./bazel-out/darwin-dbg/bin/projects/app2",
      "./bazel-out/k8-dbg/bin/projects/app2",
      "./bazel-out/x64_windows-dbg/bin/projects/app2",

      // libOne
      "./packages/libOne",
      "./bazel-out/host/bin/packages/libOne",
      "./bazel-out/darwin-fastbuild/bin/packages/libOne",
      "./bazel-out/k8-fastbuild/bin/packages/libOne",
      "./bazel-out/x64_windows-fastbuild/bin/packages/libOne",
      "./bazel-out/darwin-dbg/bin/packages/libOne",
      "./bazel-out/k8-dbg/bin/packages/libOne",
      "./bazel-out/x64_windows-dbg/bin/packages/libOne",

      // libJS
      "./packages/libJs",
      "./bazel-out/host/bin/packages/libJs",
      "./bazel-out/darwin-fastbuild/bin/packages/libJs",
      "./bazel-out/k8-fastbuild/bin/packages/libJs",
      "./bazel-out/x64_windows-fastbuild/bin/packages/libJs",
      "./bazel-out/darwin-dbg/bin/packages/libJs",
      "./bazel-out/k8-dbg/bin/packages/libJs",
      "./bazel-out/x64_windows-dbg/bin/packages/libJs",

      // angularLib
      // "./packages/angularLib/src",
      "./bazel-out/host/bin/packages/angularLib/src",
      "./bazel-out/darwin-fastbuild/bin/packages/angularLib/src",
      "./bazel-out/k8-fastbuild/bin/packages/angularLib/src",
      "./bazel-out/x64_windows-fastbuild/bin/packages/angularLib/src",
      "./bazel-out/darwin-dbg/bin/packages/angularLib/src",
      "./bazel-out/k8-dbg/bin/packages/angularLib/src",
      "./bazel-out/x64_windows-dbg/bin/packages/angularLib/src"
    ]
  }
}
